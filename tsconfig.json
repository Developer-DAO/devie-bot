{
  "compilerOptions": {
  "lib": [
    "es2021"
  ],
  "module": "commonjs",
  "target": "es2021",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "types": [
    "node"
  ],
  "sourceMap": true,
  "inlineSourceMap": false,
  "inlineSources": true,
  "declaration": false,
  "outDir": "./dist",
  // This avoids building the files.
  // "noEmit": true,
  }
}
